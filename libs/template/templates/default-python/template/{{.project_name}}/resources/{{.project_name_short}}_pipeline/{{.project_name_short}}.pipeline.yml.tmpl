{{$with_serverless := (eq .serverless "yes") -}}
# The main pipeline for {{.project_name}}
resources:
  pipelines:
    {{.project_name_short}}_pipeline:
      name: {{.project_name_short}}_pipeline_{{short_date_time}}
      {{- if or (eq default_catalog "") (eq default_catalog "hive_metastore")}}
      {{- if $with_serverless }}
      ## Catalog is required for serverless compute
      catalog: main{{else}}
      ## Specify the 'catalog' field to configure this pipeline to make use of Unity Catalog:
      # catalog: catalog_name{{end}}
      {{- else}}
      catalog: {{default_catalog}}
      {{- end}}
      schema: {{.project_name}}_${bundle.target}
      {{- if $with_serverless }}
      serverless: true
      {{- end}}
      root_path: "."

      libraries:
        - glob:
            include: transformations/**

      # Currently in beta: environments support for pipelines
