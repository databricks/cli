{
  "name": "@databricks/bundles",
  "version": "0.271.0",
  "description": "TypeScript support for Databricks Asset Bundles",
  "type": "module",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "bin": {
    "databricks-bundles": "./dist/src/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./core": {
      "types": "./dist/src/core/index.d.ts",
      "import": "./dist/src/core/index.js"
    },
    "./build": {
      "types": "./dist/src/build/index.d.ts",
      "import": "./dist/src/build/index.js"
    },
    "./jobs": {
      "types": "./dist/generated/jobs/index.d.ts",
      "import": "./dist/generated/jobs/index.js"
    },
    "./pipelines": {
      "types": "./dist/generated/pipelines/index.d.ts",
      "import": "./dist/generated/pipelines/index.js"
    },
    "./apps": {
      "types": "./dist/generated/apps/index.d.ts",
      "import": "./dist/generated/apps/index.js"
    },
    "./volumes": {
      "types": "./dist/generated/volumes/index.d.ts",
      "import": "./dist/generated/volumes/index.js"
    },
    "./schemas": {
      "types": "./dist/generated/schemas/index.d.ts",
      "import": "./dist/generated/schemas/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "codegen": "tsx src/codegen/generate.ts",
    "prepublishOnly": "npm run codegen && npm run build"
  },
  "keywords": [
    "databricks",
    "bundles",
    "asset-bundles",
    "infrastructure-as-code"
  ],
  "author": "Databricks",
  "license": "SEE LICENSE IN LICENSE",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3"
  },
  "files": [
    "dist",
    "generated",
    "LICENSE",
    "README.md"
  ]
}
