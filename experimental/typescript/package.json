{
  "name": "@databricks/bundles",
  "version": "0.271.0",
  "description": "TypeScript support for Databricks Asset Bundles",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "databricks-bundles": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.mjs",
      "require": "./dist/core/index.js"
    },
    "./build": {
      "types": "./dist/build/index.d.ts",
      "import": "./dist/build/index.mjs",
      "require": "./dist/build/index.js"
    },
    "./jobs": {
      "types": "./generated/jobs/index.d.ts",
      "import": "./generated/jobs/index.mjs",
      "require": "./generated/jobs/index.js"
    },
    "./pipelines": {
      "types": "./generated/pipelines/index.d.ts",
      "import": "./generated/pipelines/index.mjs",
      "require": "./generated/pipelines/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "codegen": "tsx src/codegen/generate.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "databricks",
    "bundles",
    "asset-bundles",
    "infrastructure-as-code"
  ],
  "author": "Databricks",
  "license": "SEE LICENSE IN LICENSE",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.1.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3"
  },
  "files": [
    "dist",
    "generated",
    "LICENSE",
    "README.md"
  ]
}
