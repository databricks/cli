#!/bin/bash

# Initialize a base project first
trace $CLI mcp --tool init_project --config-file init_input.json

cd output/test_project

# Extend with a Python job (CWD is project dir, so project_path is ".")
trace $CLI mcp --tool extend_project --config-file ../../input.json

# Validate bundle configuration
trace $CLI bundle validate

# Verify structure
trace ls -la resources/
trace ls -la src/test_job/
trace cat resources/test_job.job.yml

cd ../../
