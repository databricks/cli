envsubst < databricks.yml.tmpl > databricks.yml

cleanup() {
    trace $CLI bundle destroy --auto-approve
}
trap cleanup EXIT

trace $CLI bundle deploy > out.deploy1.$DATABRICKS_BUNDLE_ENGINE.txt 2>&1

trace $CLI bundle plan >> out.plan.$DATABRICKS_BUNDLE_ENGINE.txt 2>&1

trace errcode $CLI bundle deploy >> out.deploy2.$DATABRICKS_BUNDLE_ENGINE.txt 2>&1
