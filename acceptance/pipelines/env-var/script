title "Test PIPELINES environment variable functionality"

trace echo "PIPELINES env var: $PIPELINES"

title "Verify PIPELINES file exists"
trace test -f "$PIPELINES" && echo "PIPELINES file exists" || echo "PIPELINES file does not exist"

title "Verify PIPELINES is executable"
trace test -x "$PIPELINES" && echo "PIPELINES is executable" || echo "PIPELINES is not executable"

title "Verify PIPELINES binary works like CLI"
trace $PIPELINES --help
