errcode $CLI ssh connect --shutdown-delay=10s --cluster=$TEST_DEFAULT_CLUSTER_ID --releases-dir=$CLI_RELEASES_DIR -- "echo 'Connection successful'" >LOG.stdout 2>LOG.stderr

cat LOG.stdout

if ! grep -q "Connection successful" LOG.stdout; then
  echo "Connection was not successful, stderr:"

  run_id=$(cat LOG.stderr | grep -o "Job submitted successfully with run ID: [0-9]*" | grep -o "[0-9]*$")
  trace $CLI jobs get-run "$run_id" > LOG.job
fi
